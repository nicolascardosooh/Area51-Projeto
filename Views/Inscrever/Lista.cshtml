@model List<Inscrever>
@{
    ViewData["Title"] = "Inscrições";
}
<h1>@ViewData["Title"]</h1>

<div class="text-center fundo-transparente box-shadow">
    <table class="table">
        <thead class="text-black">
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Modalidade</th>
                <th>Idade</th>
                <th>Operações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Inscrever item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@item.Modalidade</td>
                    <td>@item.Idade</td>
<td>
 <a href="/Inscrever/Editar?Id=@item.Id"> Alterar</a>
 <a href="/Inscrever/Remover?Id=@item.Id"> Excluir</a>
     </td>
     
                </tr>

            }



        </tbody>

    </table>
    <br>

    <a asp-action="Cadastro">Nova Matricula</a>

    <style>
        body {
            background-color: whitesmoke;
        }
    </style>